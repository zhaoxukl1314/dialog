<com.sonyericsson.cameracommon.widget.ControlSwitch
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/switch_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/control_setting_dialog_height"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/switch_category"
        android:layout_width="@dimen/control_dialog_item_width"
        android:layout_height="@dimen/control_dialog_item_height"
        android:gravity="center"
        android:maxLines="1"
        android:textDirection="locale"
        style="@style/TextAppearance.SomcCamera.Large" />

    <FrameLayout
        android:id="@+id/switch_bundle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/control_dialog_item_height"
        android:layoutDirection="ltr"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/switch_track"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/switch_knob"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </FrameLayout>

</com.sonyericsson.cameracommon.widget.ControlSwitch>