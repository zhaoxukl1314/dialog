<com.sonyericsson.cameracommon.contentsview.ContentPallet
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:contentDescription="@string/cam_strings_accessibility_recent_photo_txt" >

    <ProgressBar
        android:id="@+id/content_progress_bar"
        android:layout_width="@dimen/thumbnail_image_side_length"
        android:layout_height="@dimen/thumbnail_image_side_length"
        android:visibility="invisible"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/content_thumbnail"
        android:layout_width="@dimen/thumbnail_image_side_length"
        android:layout_height="@dimen/thumbnail_image_side_length"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/content_thumbnail_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="invisible"
        android:background="@drawable/thumbnail_frame_selector_core_camera"
        android:layout_centerInParent="true" />

</com.sonyericsson.cameracommon.contentsview.ContentPallet>