<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balloon_tips"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false">
    <RelativeLayout
        android:id="@+id/balloon_tips_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layoutDirection="ltr">
        <LinearLayout
            android:id="@+id/balloon_tips_background_base_land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/balloon_tips_views_land"
            android:layout_alignLeft="@+id/balloon_tips_views_land"
            android:layout_alignRight="@+id/balloon_tips_views_land"
            android:layout_alignBottom="@+id/balloon_tips_views_land"
            android:orientation="vertical"
            android:layoutDirection="ltr">
            <ImageView
                android:id="@+id/balloon_tips_background_land_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/cam_tips_balloon_top_icn" />
            <ImageView
                android:id="@+id/balloon_tips_background_land_middle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/cam_tips_balloon_middle_icn" />
            <ImageView
                android:id="@+id/balloon_tips_background_land_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/cam_tips_balloon_bottom_icn" />
        </LinearLayout>
        <GridLayout
            android:id="@+id/balloon_tips_views_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="1"
            android:layoutDirection="locale" >
            <TextView
                android:id="@+id/balloon_tips_text_land"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/balloon_tips_single_line_text_height"
                android:layout_marginTop="@dimen/balloon_tips_single_line_vertical_margin"
                android:layout_marginLeft="@dimen/balloon_tips_single_line_horizontal_margin"
                android:layout_marginBottom="@dimen/balloon_tips_single_line_vertical_margin"
                android:layout_marginRight="@dimen/balloon_tips_single_line_horizontal_margin"
                android:layout_column="0"
                android:layout_row="0"
                android:maxLines="1"
                android:maxWidth="@dimen/balloon_tips_single_line_text_max_width"
                android:text="@string/cam_strings_balloon_tips_modeselector_txt"
                android:textColor="#ff000000"
                style="@style/TextAppearance.SomcCamera.BallonTipsStyleLarge" />
        </GridLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/balloon_tips_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layoutDirection="ltr">
        <LinearLayout
            android:id="@+id/balloon_tips_background_base_port"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/balloon_tips_views_port"
            android:layout_alignLeft="@+id/balloon_tips_views_port"
            android:layout_alignRight="@+id/balloon_tips_views_port"
            android:layout_alignBottom="@+id/balloon_tips_views_port"
            android:orientation="horizontal"
            android:layoutDirection="ltr">
            <ImageView
                android:id="@+id/balloon_tips_background_port_bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/cam_tips_balloon_bottom_port_icn" />
            <ImageView
                android:id="@+id/balloon_tips_background_port_middle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/cam_tips_balloon_middle_port_icn" />
            <ImageView
                android:id="@+id/balloon_tips_background_port_top"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/cam_tips_balloon_top_port_icn" />
        </LinearLayout>
        <GridLayout
            android:id="@+id/balloon_tips_views_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="1"
            android:layoutDirection="locale">
            <TextView
                android:id="@+id/balloon_tips_text_port"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/balloon_tips_single_line_text_height"
                android:layout_marginTop="@dimen/balloon_tips_single_line_vertical_margin"
                android:layout_marginLeft="@dimen/balloon_tips_single_line_horizontal_margin"
                android:layout_marginBottom="@dimen/balloon_tips_single_line_vertical_margin"
                android:layout_marginRight="@dimen/balloon_tips_single_line_horizontal_margin"
                android:layout_column="0"
                android:layout_row="0"
                android:maxLines="1"
                android:maxWidth="@dimen/balloon_tips_single_line_text_max_width"
                android:text="@string/cam_strings_balloon_tips_modeselector_txt"
                android:textColor="#ff000000"
                style="@style/TextAppearance.SomcCamera.BallonTipsStyleLarge" />
        </GridLayout>
    </RelativeLayout>
</RelativeLayout>
