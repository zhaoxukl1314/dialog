<com.sonyericsson.cameracommon.widget.CategorySwitch
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/switch_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_dialog_item_height"
    android:paddingLeft="@dimen/left_edge_padding"
    android:paddingRight="@dimen/right_edge_padding"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/switch_category"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="left|center_vertical"
        android:maxLines="@integer/category_switch_textview_max_lines"
        android:maxWidth="@dimen/category_switch_textview_max_width"
        android:textDirection="locale"
        style="@style/TextAppearance.SomcCamera.Large" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/switch_bundle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/switch_track"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/switch_knob"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </FrameLayout>

</com.sonyericsson.cameracommon.widget.CategorySwitch>