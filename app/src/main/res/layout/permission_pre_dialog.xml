<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/alert_dialog_padding"
    android:paddingRight="@dimen/alert_dialog_padding" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">
        <TextView
            android:id="@+id/alert_dialog_header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/alert_dialog_title_margin_bottom"
            android:paddingBottom="@dimen/alert_dialog_body_padding_bottom"
            style="@style/TextAppearance.SomcCamera.PermissionDialog.Default"/>
        <com.sonyericsson.cameracommon.activity.PermissionListView
            android:id="@+id/permission_list"
            android:divider="#00000000"
            android:paddingTop="3dp"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
