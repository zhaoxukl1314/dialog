<com.sonymobile.cameracommon.view.Notification
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:paddingRight="@dimen/scene_indicator_bottom_margin">

    <RelativeLayout
        android:id="@+id/condition_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <include
            android:id="@+id/recognised_condition"
            android:layout_alignParentRight="true"
            layout="@layout/recognised_condition" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scene_indicator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/scene_indicator_text_width"
        android:layout_below="@+id/condition_indicator"
        android:layout_alignParentRight="true">

        <include
            android:id="@+id/recognised_scene"
            android:layout_alignParentRight="true"
            layout="@layout/recognised_scene" />
    </RelativeLayout>

</com.sonymobile.cameracommon.view.Notification>
