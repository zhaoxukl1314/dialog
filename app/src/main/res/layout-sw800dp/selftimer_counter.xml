<com.sonymobile.cameracommon.view.SelfTimerCountDownView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/selftimer_countdown_layout_base_landscape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">

        <LinearLayout
            android:id="@+id/selftimer_countdown_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/selftimer_hint_text"
                    style="@style/SelfTimerTextDropShadow"
                    android:text="@string/cam_strings_self_timer_hint_countdown_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:maxLines="1"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16dp"
                    android:lineSpacingMultiplier="1.2"
                    android:fontFamily="sans-serif-medium"
                    android:layout_above ="@+id/selftimer_countdown_base"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/selftimer_countdown_base"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/selftimer_countdown_bg"
                    android:layout_width="@dimen/viewfinder_countdown_outside_diameter"
                    android:layout_height="@dimen/viewfinder_countdown_outside_diameter"
                    android:layout_gravity="center"
                    android:src="@drawable/selftimer_countdown_bg"/>

                <com.sonymobile.cameracommon.view.SelfTimerCountDownCircleView
                    android:id="@+id/selftimer_countdown_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <com.sonymobile.cameracommon.view.SelfTimerCountDownNumberView
                    android:id="@+id/selftimer_countdown_text"
                    style="@style/OnScreenTextDropShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:shadowColor="#00000000"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selftimer_countdown_layout_base_port"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">


        <RelativeLayout
            android:id="@+id/selftimer_countdown_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/selftimer_countdown_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/selftimer_hint_text_port"
                    style="@style/SelfTimerTextDropShadow"
                    android:text="@string/cam_strings_self_timer_hint_countdown_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginLeft="96dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:maxLines="4"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16dp"
                    android:lineSpacingMultiplier="1.2"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/selftimer_countdown_base"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="24dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/selftimer_countdown_bg"
                    android:layout_width="@dimen/viewfinder_countdown_outside_diameter"
                    android:layout_height="@dimen/viewfinder_countdown_outside_diameter"
                    android:layout_gravity="center"
                    android:src="@drawable/selftimer_countdown_bg"/>

                <com.sonymobile.cameracommon.view.SelfTimerCountDownCircleView
                    android:id="@+id/selftimer_countdown_circle_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <com.sonymobile.cameracommon.view.SelfTimerCountDownNumberView
                    android:id="@+id/selftimer_countdown_text_port"
                    style="@style/OnScreenTextDropShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:shadowColor="#00000000"/>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</com.sonymobile.cameracommon.view.SelfTimerCountDownView>
