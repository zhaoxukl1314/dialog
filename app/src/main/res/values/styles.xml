<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SomcCameraTheme"
            parent="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textColor">@color/default_text_col</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textViewStyle">@style/SomcCameraTextViewStyle</item>
        <item name="android:alertDialogTheme">@style/Theme.SomcCamera.AlertDialog</item>
        <item name="android:buttonBarStyle">@android:style/Holo.ButtonBar</item>
        <item name="android:buttonBarButtonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="SomcCameraHoloTheme"
            parent="@style/SomcCameraTheme">
        <item name="android:alertDialogTheme">@style/Theme.Holo.SomcCamera.AlertDialog</item>
    </style>

    <style name="SomcCameraTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.SomcCamera.AlertDialog"
            parent="@android:style/Theme.DeviceDefault.Dialog.MinWidth">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!--  This text style is applied to title of AlertDialog. -->
        <item name="android:windowTitleStyle">@style/TextAppearance.SomcCamera.Dialog.Title</item>
        <!--  This text style is applied to message of AlertDialog. -->
        <item name="android:textAppearanceMedium">@style/TextAppearance.SomcCamera.Dialog.Medium</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>

    <style name="Theme.Holo.SomcCamera.AlertDialog"
            parent="@style/Theme.SomcCamera.AlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.SomcCamera.Dialog.Title"
            parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textSize" tools:ignore="SpUsage">22sp</item>
    </style>

    <style name="TextAppearance.SomcCamera.Dialog.Medium"
            parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.SomcCamera.PermissionDialog.Medium"
        parent="@android:style/TextAppearance.DeviceDefault.Medium">
    </style>

    <style name="TextAppearance.SomcCamera.PermissionDialog.Small"
        parent="@android:style/TextAppearance.DeviceDefault.Small">
    </style>

    <style name="TextAppearance.SomcCamera.PermissionDialog.Default"
        parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SomcCamera.BallonTipsStyleSmall" parent="@style/BallonTipsStyle">
        <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
    </style>

    <style name="TextAppearance.SomcCamera.BallonTipsStyleMedium" parent="@style/BallonTipsStyle">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>

    <style name="TextAppearance.SomcCamera.BallonTipsStyleLarge" parent="@style/BallonTipsStyle">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <style name="TextAppearance.SomcCamera.Small" parent="@style/OnScreenTextDropShadow">
        <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
    </style>

    <style name="TextAppearance.SomcCamera.Medium" parent="@style/OnScreenTextDropShadow">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>

    <style name="TextAppearance.SomcCamera.Large" parent="@style/OnScreenTextDropShadow">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <style name="WindowAnimationDeviceDefaultDialogLandscape">
        <item name="android:windowEnterAnimation">@animator/somc_dialog_popup_enter</item>
        <item name="android:windowExitAnimation">@animator/somc_dialog_popup_exit_landscape</item>
    </style>
    <style name="WindowAnimationDeviceDefaultDialogPortrait">
        <item name="android:windowEnterAnimation">@animator/somc_dialog_popup_enter</item>
        <item name="android:windowExitAnimation">@animator/somc_dialog_popup_exit_portrait</item>
    </style>

    <style name="BallonTipsStyle">
        <item name="android:shadowColor">#aa000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="OnScreenTextDropShadow">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="SelfTimerTextDropShadow">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">3.0</item>
    </style>

     <style name="TutorialText">
        <item name="android:textColor">@color/tutorial_text_color</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
</resources>
