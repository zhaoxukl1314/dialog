<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.SomcCamera.Small" parent="@style/OnScreenTextDropShadow">
        <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
    </style>

    <style name="TextAppearance.SomcCamera.Medium" parent="@style/OnScreenTextDropShadow">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>

    <style name="TextAppearance.SomcCamera.Large" parent="@style/OnScreenTextDropShadow">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <style name="BallonTipsStyle">
        <item name="android:shadowColor">#aa000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="OnScreenTextDropShadow">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="SelfTimerTextDropShadow">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">3.0</item>
    </style>
</resources>
