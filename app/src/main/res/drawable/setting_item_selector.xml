<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <level-list>
            <item android:maxLevel="0" android:drawable="@drawable/cam_shortcut_dialog_item_pressed_rect_icn" />
            <item android:maxLevel="1" android:drawable="@drawable/cam_shortcut_dialog_item_pressed_rect_upper_rounded_icn" />
            <item android:maxLevel="2" android:drawable="@drawable/cam_shortcut_dialog_item_pressed_rect_bottom_rounded_icn" />
        </level-list>
    </item>

    <item android:state_selected="true">
        <level-list>
            <item android:maxLevel="0" android:drawable="@drawable/cam_shortcut_dialog_item_highlighted_rect_icn" />
            <item android:maxLevel="1" android:drawable="@drawable/cam_shortcut_dialog_item_highlighted_rect_upper_rounded_icn" />
            <item android:maxLevel="2" android:drawable="@drawable/cam_shortcut_dialog_item_highlighted_rect_bottom_rounded_icn" />
        </level-list>
    </item>

    <item android:state_pressed="false" android:state_selected="false"
        android:drawable="@android:color/transparent"/>
</selector>
